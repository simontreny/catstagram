{
	"compilerOptions": {
		"target": "es2015",
		"jsx": "react",
		"moduleResolution": "node",
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"noEmit": true
	},
	"exclude": [
		"node_modules"
	],
}
